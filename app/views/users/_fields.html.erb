<%= content_for :head do %>
  <%= javascript_include_tag 'charcount.js' %>
<% end %>

<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name, :maxlength => 20 %>
  <div id="counter-micropost_content"></div>
</div>
<div class="field">
  <%= f.label :email %><br />
  <%= f.text_field :email %>
</div>
<div class="field">
  <%= f.label :password %><br />
  <%= f.password_field :password %>
</div>
<div class="field">
  <%= f.label :password_confirmation, "Confirmation" %><br />
  <%= f.password_field :password_confirmation %>
</div>

